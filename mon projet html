<body>
    <button onclick="afficherIP()">Cliquer pour acc√©der √† ce site</button>
    <p id="ip"></p>

    <script>
        function afficherIP() {
            // Utilisation d'un service externe pour r√©cup√©rer l'adresse IP
            fetch('https://api.ipify.org?format=json')
                .then(response => response.json())
                .then(data => {
                    // Afficher l'adresse IP et l'emoji qui rigole
                    document.getElementById('ip').innerHTML = "Votre adresse IP est : " + data.ip + " <span class='emoji'>üòÇ</span>";
                })
                .catch(error => {
                    console.error('Erreur lors de la r√©cup√©ration de l\'adresse IP:', error);
                    document.getElementById('ip').innerText = "Impossible de r√©cup√©rer l'adresse IP.";
                });
        }
    </script>
